<?xml version="1.0"?>
<conf-spec xmlns="https://curity.se/ns/conf-spec">
    <metadata>
        <purpose>configuration-bundle</purpose>
        <name>Android no Fallback</name>
        <description>Add android client without fallback configuration</description>
    </metadata>
    <variable-definitions>
        <variable-definition>
            <name>TOKEN_PROFILE</name>
            <tagpath>/profiles/profile/id</tagpath>
            <description>The profile where to add the clients</description>
            <type-hint>profile</type-hint>
        </variable-definition>
        <variable-definition>
            <name>ANDROID_HAAPI_CLIENT</name>
            <tagpath/>
            <description>The ID of the client to add for android, used by clients who can perform
                attestation
            </description>
            <type-hint>string</type-hint>
        </variable-definition>
        <variable-definition>
            <name>ANDROID_REDIRECT_URI</name>
            <tagpath/>
            <description>The redirect_uri used for the android clients</description>
            <type-hint>string</type-hint>
        </variable-definition>
        <variable-definition>
            <name>ANDROID_PACKAGE_NAME</name>
            <tagpath/>
            <description>The package name of the android app, used for attestation. Since this configuration spec does
                not validate attestation, this can be a bogus value. Can be changed
                after import.
            </description>
            <type-hint>string</type-hint>
        </variable-definition>
        <variable-definition>
            <name>ANDROID_SIGNATURE_DIGEST</name>
            <tagpath/>
            <description>The digest of the certificate used to sign the android app, used for
                attestation. Since this configuration spec does not validate attestation, this can be a bogus value. Can
                be changed after import.
            </description>
            <type-hint>string</type-hint>
        </variable-definition>
    </variable-definitions>
    <actions/>
    <merge-config>
        <config xmlns="http://tail-f.com/ns/config/1.0">
            <profiles xmlns="https://curity.se/ns/conf/base">
                <profile>
                    <id>#{TOKEN_PROFILE}</id>
                    <type xmlns:as="https://curity.se/ns/conf/profile/oauth">as:oauth-service</type>
                    <settings>
                        <authorization-server xmlns="https://curity.se/ns/conf/profile/oauth">
                            <client-store>
                                <config-backed>
                                    <client>
                                        <id>#{ANDROID_HAAPI_CLIENT}</id>
                                        <redirect-uris>#{ANDROID_REDIRECT_URI}</redirect-uris>
                                        <refresh-token-ttl>3600</refresh-token-ttl>
                                        <scope>openid</scope>
                                        <user-authentication/>
                                        <no-authentication>true</no-authentication>
                                        <capabilities>
                                            <code/>
                                            <haapi>
                                                <use-legacy-dpop>false</use-legacy-dpop>
                                                <issue-token-bound-authorization-code>true
                                                </issue-token-bound-authorization-code>
                                            </haapi>
                                        </capabilities>
                                        <proof-key>
                                            <require-proof-key>false</require-proof-key>
                                        </proof-key>
                                        <attestation>
                                            <disable-attestation-validation>true</disable-attestation-validation>
                                            <android>
                                                <package-name>#{ANDROID_PACKAGE_NAME}</package-name>
                                                <signature-digest>#{ANDROID_SIGNATURE_DIGEST}</signature-digest>
                                            </android>
                                        </attestation>
                                    </client>
                                </config-backed>
                            </client-store>
                        </authorization-server>
                    </settings>
                </profile>
            </profiles>
        </config>
    </merge-config>
    <conditions>
        <must-exist>
            <path>/profiles/profile{#{TOKEN_PROFILE} oauth-service}/id</path>
            <error-description>The provided profile does not exist or is not a token profile.
            </error-description>
        </must-exist>
        <must-not-exist>
            <path>
                /profiles/profile{#{TOKEN_PROFILE}
                oauth-service}/settings/authorization-server/client-store/config-backed/client{#{ANDROID_HAAPI_CLIENT}}
            </path>
            <error-description>A client with ID ${ANDROID_HAAPI_CLIENT} already exist. Please select
                a new ID.
            </error-description>
        </must-not-exist>
    </conditions>
</conf-spec>